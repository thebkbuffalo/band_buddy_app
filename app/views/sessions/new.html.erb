<section id="log_in">
  <img class="welcome_img" src="http://nathanspencerguitar.files.wordpress.com/2013/08/acoustic-guitar-1.jpg"/>

  <div class="login_form" id="login">
    <h1>Welcome to Band Buddy!</h1>
    <h2>Sign In</h2>
  </br>
    <div class="login">
      <%= form_tag(sessions_path) do %>
        <%= text_field_tag :email, nil, placeholder: 'Email' %><br/><br/>
        <%= password_field_tag :password, nil, placeholder: 'Password' %><br/><br/>
        <%= submit_tag('Login') %>
      <% end %>
      <p style="color: red"><%= flash[:error] %></p>
  		<button><%= link_to('Sign up', new_user_path) %></button>
    </div>
</section>
