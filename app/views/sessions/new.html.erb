

<section id="log_in">

  <div class="login_form" id="login">
    <h1><strong>Welcome To Band Buddy!</strong></h1>
  <div class="login">
      <%= form_tag(sessions_path) do %>
        <span id="email_input"><%= text_field_tag :email, nil, placeholder: 'Email' %></span><br/>
        <%= password_field_tag :password, nil, placeholder: 'Password' %><br/>
      <span id="log_in_button"><%= submit_tag('Login') %></span><br/><br/>
  		<span id="sign_up_button" class="button"><%= link_to('Sign up', new_user_path) %></span>
      <% end %>
      <p style="color: red"><%= flash[:error] %></p>
    </div>
</section>

<h4 id="quote"><%= @quotes.gsub('\n', '<br/>') %></h4>
