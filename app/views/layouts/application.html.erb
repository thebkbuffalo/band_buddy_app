<!DOCTYPE html>
<html>
<head>
  <title>BandBuddyApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <% if current_user %>
    <%= button_to "Logout", sessions_path, :method => :delete, class: :logout_button %>
    <a href="/users/<%=current_user.id%>">
    <h1 id="welcome">Welcome <%= current_user.name %></h1></a>
  <% end %>
</header>

<%= yield %>

</body>
</html>
